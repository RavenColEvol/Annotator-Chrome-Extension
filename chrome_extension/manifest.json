{
  "name": "ReMark",
  "action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 3,
  "version": "0.0.1",
  "description": "Annotate any website",
  "host_permissions": ["*://*/*", "<all_urls>"],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "./background.js"
  }
}